{
    "html":{
        "suffix":["html","htm"],
        "rules":{
            "tag-self-close": true,
            "meta-charset": true,
            "src-not-empty": true,
            "id-class-value": "dash",
            "button-type-require": true,
            "link-rel-require": true,
            "style-disabled": true,
            "img-size": true
        }
    },
    "css":{
        "suffix": "css",
        "ignore":[],
        "rules":{}
    },
    "js":{
        "suffix":["js"],
        "env":{
            "browser":true,
            "node":true
        },
        "global":{
            "$":true,
            "jQUery":true,
            "angular":true
        },
        "extends":"eslint:recommended",
        "rules":{
            "eol-last": 1,
            "no-trailing-spaces":1,
            "indent": [2, 4, {"SwitchCase": 1}],
            "space-infix-ops": 2,
            "space-unary-ops":2,
            "space-before-blocks":2,
            "space-before-keywords":2,
            "key-spacing":2,
            "no-spaced-func":2,
            "space-before-function-paren":2,
            "semi-spacing":[2,{"before": false, "after": true}],
            "comma-spacing": [2,{"before": false, "after": true}],
            "space-in-parens":[2,"never"],
            "max-len":[2,120],
            "operator-linebreak":[2,"before"],
            "comma-style":2,
            "brace-style": [1, "1tbs",{ "allowSingleLine": true }],
            "semi":[2,"always"],
            "curly":[2,"all"],
            "wrap-iife":[2,"inside"],
            "camelcase":[2,{"properties": "never"}],
            "new-cap":2,
            "id-length":[2,{"exceptions":["i","j","k"]}],
            "no-inline-comments":2,
            "spaced-comment":2,
            "lines-around-comment":[2,{"beforeLineComment":true}],
            "no-use-before-define":[2,"nofunc"],
            "one-var":[2,"never"],
            "eqeqeq":[2,"allow-null"],
            "no-else-return":1,
            "no-loop-func":1,
            "radix":2,
            "quotes":[2,"single"],
            "no-new-object":2,
            "quote-props":[1,"consistent-as-needed",{ "keywords": true }],
            "no-extend-native":2,
            "dot-notation":[1,{ "allowKeywords": false ,"allowPattern": "^[a-z]+([-_][a-z]+)+$"}],
            "guard-for-in":1,
            "no-array-constructor":2,
            "max-params":[1,6],
            "no-new-func":1,
            "no-eval":2,
            "no-implied-eval":1,
            "no-with":1
        }
    }
}
